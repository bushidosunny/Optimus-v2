# Streamlit Cloud Secrets Configuration
# Rename this file to secrets.toml when deploying
# Add these secrets in Streamlit Cloud dashboard under App Settings > Secrets

# Qdrant Cloud Configuration (Required)
QDRANT_URL = "https://your-cluster.qdrant.io"
QDRANT_API_KEY = "your-qdrant-api-key"
QDRANT_USE_GRPC = false

# At least one LLM provider is required
# OpenAI (Recommended for Mem0 extraction)
OPENAI_API_KEY = "sk-..."

# Optional LLM Providers
ANTHROPIC_API_KEY = "sk-ant-..."
GOOGLE_API_KEY = "..."
GROQ_API_KEY = "gsk_..."
MISTRAL_API_KEY = "..."
XAI_API_KEY = "xai-..."
TOGETHER_API_KEY = "..."

# Authentication Configuration
JWT_SECRET_KEY = "your-very-long-random-secret-key-here"
JWT_ALGORITHM = "HS256"
JWT_EXPIRATION_HOURS = 24

# Admin Configuration
ADMIN_USERNAME = "admin"
ADMIN_PASSWORD = "change-this-strong-password"

# Optional: Monitoring
ENABLE_MONITORING = false
PROMETHEUS_PORT = 9090