# Test configuration for local development
# Copy this to secrets.toml for quick testing

# Local Qdrant (requires Docker)
QDRANT_URL = "http://localhost:6333"
QDRANT_API_KEY = ""  # Empty for local
QDRANT_USE_GRPC = false

# Test with OpenAI (replace with your key)
OPENAI_API_KEY = "sk-test-key-replace-me"

# Or use free alternatives:
# GROQ_API_KEY = "gsk_your_groq_key"  # Get from https://console.groq.com
# GOOGLE_API_KEY = "your_google_key"  # Get from https://makersuite.google.com

# Test authentication
[auth]
type = "basic"
session_expiry_hours = 24
max_login_attempts = 5
require_captcha_after_failures = 3

